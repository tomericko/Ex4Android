<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tomer.ex4.SignUpFragment"
    android:background="@android:color/transparent">

    <ScrollView
        android:id="@+id/full_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iconView"
            android:src="@null"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:id="@+id/userNameFrm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iconView"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/usernameTxt"
                android:drawableLeft="@drawable/account"
                android:hint="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:drawableRight="@drawable/transparent"
                android:ems="10"
                android:textColor="#FFF"
                android:textColorHint="@color/translucent_grey"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="0dp"
                android:drawablePadding="5dp"
                android:background="@drawable/mydeittxt"/>

            <ImageButton
            android:id="@+id/usernameResetBtn"
            android:src="@drawable/reset_cricle"
            android:background="@null"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/passwordFrm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userNameFrm"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/passwordTxt"
                android:drawableLeft="@drawable/lock"
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:drawableRight="@drawable/transparent"
                android:ems="10"
                android:textColor="#FFF"
                android:textColorHint="@color/translucent_grey"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="0dp"
                android:drawablePadding="5dp"
                android:background="@drawable/mydeittxt"/>

            <ImageButton
                android:id="@+id/passwordResetBtn"
                android:src="@drawable/reset_cricle"
                android:background="@null"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/emailFrm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordFrm"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/emailTxt"
                android:drawableLeft="@drawable/email"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:drawableRight="@drawable/transparent"
                android:ems="10"
                android:textColor="#FFF"
                android:textColorHint="@color/translucent_grey"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="0dp"
                android:drawablePadding="5dp"
                android:background="@drawable/mydeittxt"/>

            <ImageButton
                android:id="@+id/emailResetBtn"
                android:src="@drawable/reset_cricle"
                android:background="@null"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/nameFrm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailFrm"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/nameTxt"
                android:drawableLeft="@drawable/emoticon_cool"
                android:hint="Full Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:drawableRight="@drawable/transparent"
                android:ems="10"
                android:textColor="#FFF"
                android:textColorHint="@color/translucent_grey"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="0dp"
                android:drawablePadding="5dp"
                android:background="@drawable/mydeittxt"/>

            <ImageButton
                android:id="@+id/nameResetBtn"
                android:src="@drawable/reset_cricle"
                android:background="@null"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp" />

        </FrameLayout>

        <Button
            android:id="@+id/signUpBtn"
            android:text="@string/signup"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyButton"
            android:layout_below="@+id/nameFrm"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/enablebtn"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    </ScrollView>



</RelativeLayout>
